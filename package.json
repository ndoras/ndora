{
  "name": "ndora",
  "version": "0.0.1",
  "description": "notify,deploy once, run anywhere。一次部署，到处运行的聚合通知。",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require ts-node/register --watch --watch-files src src/**/*.test.ts",
    "start": "ts-node src/index.ts",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "pre-commit:comment": "提交前格式化",
    "pre-commit": "lint-staged",
    "build": "swc src -d dist --source-maps --copy-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndoras/ndora.git"
  },
  "keywords": [
    "notify",
    "通知",
    "docker"
  ],
  "author": "ruicky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndoras/ndora/issues"
  },
  "homepage": "https://github.com/ndoras/ndora#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.248",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-session": "^5.10.6",
    "@types/koa-static": "^4.0.2",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "yaml": "^2.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run eslint",
      "npm run prettier"
    ]
  }
}
